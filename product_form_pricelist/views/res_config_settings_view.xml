<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

<record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="sale.res_config_settings_view_form" />
    <field name="arch" type="xml">
        <div id="auth_signup_documents" position="after">
            <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="no_list_price"
                    title="In case that you only manage your price using fixed pricelist, you can hide the field 'Sales Price'"
                >
                <div class="o_setting_left_pane">
                    <field name="group_no_list_price" />
                </div>
                <div class="o_setting_right_pane">
                    <label for="group_no_list_price" />
                    <div class="text-muted">
                        Hide 'Sales Price' in product form
                    </div>
                </div>
            </div>
        </div>
    </field>
</record>



</odoo>
